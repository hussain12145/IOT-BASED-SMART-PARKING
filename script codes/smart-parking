    var timestamp = Utilities.formatDate(new Date(), timeZone, "dd-MM-yyyy hh:mm:ss a");

    var uidEmailMap = {
      "E38839DA": "***********@gmail.com",
      "DE67E056": "***********@gmail.com"
    };

