              }
              th {
                background-color: rgba(255, 255, 255, 0.3);
              }
              .pay-section {
                margin-top: 30px;
                text-align: center;
                color: #000;
              }
              .pay-section img {
                margin-top: 10px;
                border: 1px solid rgba(0,0,0,0.2);
                padding: 5px;
                border-radius: 10px;
              }
              .footer {
                margin-top: 30px;
                padding: 15px;
